@model SimpleMusicStore.Web.Areas.Admin.Models.AddRecordBindingModel
@{
    ViewData["Title"] = "Add new record";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Import from discogs url</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DiscogsUrl"></label>
                    <input asp-for="DiscogsUrl" class="form-control" />
                    <span asp-validation-for="DiscogsUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Import</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
