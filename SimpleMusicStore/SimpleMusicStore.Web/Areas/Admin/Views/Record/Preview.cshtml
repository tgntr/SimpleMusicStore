@model SimpleMusicStore.Web.Areas.Admin.Models.RecordAdminViewModel
@{
    ViewData["Title"] = "Preview - " + Model.Artist + " - " + Model.Title;
}
<br />
<div class="row border border-white">
    <div class="col-sm-3">
        <img src="@Model.ImageUrl" alt="" height="270" width="270" />
    </div>
    <div class="col-sm-6">
        <h3><strong>@Model.Title</strong></h3>
        <hr />
        <div class="col-md-6">
            <table>
                <col width="80" />
                <col width="300" />
                <tr>
                    <td><h4><strong>Artist:</strong></h4></td>
                    <td><h4>@Model.Artist</h4></td>
                </tr>
                <tr>
                    <td><h4><strong>Label:</strong></h4></td>
                    <td><h4>@Model.Label</h4></td>
                </tr>
                <tr>
                    <td><h4><strong>Year:</strong></h4></td>
                    <td><h4>@Model.Year</h4></td>
                </tr>
                <tr>
                    <td><h4><strong>Genre:</strong></h4></td>
                    <td><h4>@Model.Genre</h4></td>
                </tr>
                <tr>
                    <td><h4><strong>Format:</strong></h4></td>
                    <td><h4>@Model.Format</h4></td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <div>
                <h4><strong>&nbsp;&nbsp;&nbsp;&nbsp;Price:</strong></h4>
            </div>
            <form method="post">
                <div class="col-xs-5">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-default">Add to Store</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

