@model SimpleMusicStore.Web.Models.ViewModels.CartOrderViewModel
@{
    ViewData["Title"] = "Order Details";
}
<br />
<div class="row">
    <div class="col-md-6">

        <h4><strong>Items:</strong></h4>
        <table class="table">
            <thead>
                <tr>
                    <col width="200" />
                    <col width="40" />
                    <col width="40" />
                    <th scope="col">Record</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @item.Artist.Name - @item.Title [@item.Label.Name]
                        </td>
                        <td>$@item.Price</td>
                        <td>
                            @item.Quantity
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<table>
    <col width="180" />
    <col width="200" />
    <tr>
        <td><h4><strong>Date ordered:</strong></h4></td>
        <td><h4>@Model.OrderDateFormat</h4></td>
    </tr>
    <tr>
        <td><h4><strong>Delivery address:</strong></h4></td>
        <td><h4>@Model.DeliveryAddress.Street, @Model.DeliveryAddress.City, @Model.DeliveryAddress.Country</h4></td>
    </tr>
    <tr>
        <td><h3><strong>Total price:</strong></h3></td>
        <td><h3>$@Model.TotalPrice()</h3></td>
    </tr>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

