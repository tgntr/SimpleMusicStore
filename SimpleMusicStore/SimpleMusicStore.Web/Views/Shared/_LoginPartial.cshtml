@using Microsoft.AspNetCore.Identity
@using SimpleMusicStore.Models

@inject SignInManager<SimpleUser> SignInManager
@inject UserManager<SimpleUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area=""asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}